{
  "scripts": {
    "pip-install": "python -m pip install --upgrade --target=python_modules -r requirements.txt",
    "pip-install-tests": "python -m pip install --upgrade --target=python_modules -r requirements/tests.txt",
    "run-unit-tests": "python -m unittest discover -s ./ -p *_test.py",
    "run-contract-tests": "python -m unittest discover -s ./ -p *_test_contract.py",
    "coverage": "python -m pytest --cov=./ --ignore=python_modules",
    "coverage-report-xml": "python -m pytest --cov-report xml --cov=./ --ignore=python_modules"
  }
}
